<%# Override of Blacklight v9.0.0.beta1 to:
      - add custom arrow svg
      - remove wrapping li element %>

<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if current_page.last? %>
  <%= link_to '#', :rel => 'next', :onclick=>'return false;', class: 'page-link', aria: { label: t('views.pagination.aria.go_to_next_page') } do %>
    <%= image_tag 'arrow.svg' %>
  <% end %>
<% else %>
  <%= link_to url, :rel => 'next', :remote => remote, class: 'page-link', aria: { label: t('views.pagination.aria.go_to_next_page') } do %>
    <%= image_tag 'arrow.svg' %>
  <% end %>
<% end %>