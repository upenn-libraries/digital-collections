<%# Copied template from Blacklight 9.0.0.beta1 to remove "visually-hidden" on constraints headers, some additional styling %>

<%= content_tag @tag || :div, id: @id, class: @classes do %>
  <% if @render_headers %>
    <h2><%= t('blacklight.search.filters.title') %></h2>
  <% end %>
  <% if query_constraints_area.present? %>
    <% query_constraints_area.each do |constraint| %>
      <%= constraint %>
    <% end %>
  <% else %>
    <%= query_constraints %>
  <% end %>

  <% if facet_constraints_area.present? %>
    <% facet_constraints_area.each do |constraint| %>
      <%= constraint %>
    <% end %>
  <% else %>
    <%= facet_constraints %>
  <% end %>

  <% additional_constraints.each do |constraints| %>
    <%= constraints %>
  <% end %>

  <%= render @start_over_component.new if @start_over_component %>
<% end %>
