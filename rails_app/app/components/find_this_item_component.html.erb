<button class="btn btn-secondary btn-lg" data-bs-toggle="modal" data-bs-target="#dc-find-this-item-modal"><%= t('show.find_this_item.button') %></button>
<div class="modal fade modal-lg dc-find-this-item-modal" id="dc-find-this-item-modal" tabindex="-1" role="dialog" aria-labelledby="dc-find-this-item-modal-heading" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content dc-find-this-item-modal-content">
      <div class="modal-header">
        <h2 class="modal-title mb-0" id="dc-find-this-item-modal-heading"><%= t('show.find_this_item.h2') %></h2>
        <button class="btn-close" data-bs-dismiss="modal" aria-label="Close">
        </button>
      </div>
      <div class="modal-body">
        <% if @document.digital_catalog_url %>
          <p><%= link_to(t('show.find_this_item.availability.link_text'), @document.digital_catalog_url) %> <%= t('show.find_this_item.availability.remaining_text') %></p>
        <% end %>

        <% if location? %>
          <p>Physical location notes:</p>

          <div class="alert alert-light">
          <% location.each do |location| %>
            <ul class="list-unstyled mb-0">
              <li><%= location %></li>
            </ul>
          <% end %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>